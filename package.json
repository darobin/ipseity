{
  "name": "ipseity",
  "type": "module",
  "version": "0.0.1",
  "description": "InterPlanetary Standards Edited and Integrated to Travel Yonder (IPSEITY)",
  "author": "Robin Berjon <robin@berjon.com>",
  "license": "MIT",
  "scripts": {
    "watch": "concurrently --handle-input npm:watch-md npm:watch-css",
    "watch-md": "nodemon ./node_modules/.bin/eleventy -- --serve --port=8023 --config=.eleventy.cjs",
    "watch-css": "concurrently --handle-input npm:watch-css-ips npm:watch-css-idx",
    "watch-css-ips": "NODE_ENV=production cssn -w static/ipseity.css static/ipseity.min.css",
    "watch-css-idx": "NODE_ENV=production cssn -w static/index.css static/index.min.css",
    "build": "npm run build-css && npm run build-md",
    "build-md": "npx @11ty/eleventy --config=.eleventy.cjs",
    "build-css": "npm run build-css-ips && npm run build-css-idx",
    "build-css-ips": "NODE_ENV=production cssn static/ipseity.css static/ipseity.min.css",
    "build-css-idx": "NODE_ENV=production cssn static/index.css static/index.min.css",
    "test": "mocha"
  },
  "mocha": {
    "reporter": "spec",
    "bail": true
  },
  "nodemonConfig": {
    "watch": [
      "lib",
      "bin"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/darobin/ipseity.git"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {}
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "cssn": "^3.3.0",
    "eslint": "^8.26.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "selectron-test": "^2.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "jsdom": "^20.0.2",
    "normalize.css": "^8.0.1",
    "remark": "^14.0.2",
    "remark-heading-id": "^1.0.0",
    "remark-html": "^15.0.1",
    "remark-squeeze-paragraphs": "^5.0.1",
    "respec": "^32.3.0"
  }
}
